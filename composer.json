{
    "name": "erhan/steamprices",
    "description": "Laravel Steam Prices",
    "license": "MIT",
    "authors": [
        {
            "name": "Erhan Hangul",
            "email": "erhan@hangul.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "illuminate/support": "^8.0",
        "illuminate/cache": "^8.0",
        "guzzlehttp/guzzle": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7",
        "orchestra/testbench": "~3.0"
    },
    "autoload": {
        "psr-4": {
            "Erhan\\SteamPrices\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Erhan\\SteamPrices\\SteamProcessServiceProvider"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Erhan\\SteamPrices\\": "src/"
        }
    }
}
